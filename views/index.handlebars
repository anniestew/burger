<h1>Eat Da Burger!</h1>

{{!-- <h2>Cats that are not sleepy!</h2> --}}

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    <div class="row">
      <div class="col">
        {{burger_name}}
      </div>
      <div class="col">
        <button class="devour" data-id="{{this.id}}">Devour it!</button>
      </div>
    </div>
  </li>
  {{/unless}}
  {{/each}}
</ul>

{{!-- <h2>Cats that are sleepy!</h2> --}}

<ul>
  {{#each burgers}}
  {{#if devoured}}
<li>
    <div class="row">
      <div class="col">
        {{burger_name}}
      </div>
      <div class="col">
        {{devoured}}
      </div>
    </div>
  </li>
  {{/if}}

  {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-burger">
    <label for="burgers">Burger Name:</label>
    <input type="text"  id="addburger" name="name" value="">

  <button  type="submit">Add Burger</button>
</form>